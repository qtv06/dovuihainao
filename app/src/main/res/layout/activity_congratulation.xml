<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_configuration"
    android:layout_height="match_parent"
    tools:context="com.example.dell.dovuihainao.CongratulationActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:src="@drawable/title_configuration" />
    <TextView
        android:id="@+id/tvKhen"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#7fec0a"
        android:textSize="30dp"
        android:text="Bạn đúng là thiên tài"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#f9ef3b"
            android:text="+20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/kimcuong"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>


    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/than_dong" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnShare"
            android:onClick="share"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_button"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:text="Khoe bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="continute"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_button"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:text="Chơi tiếp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
